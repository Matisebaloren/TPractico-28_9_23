@{
    ViewData["Title"] = "Carreras";
}


<!-- Modal -->
<div class="modal fade" id="ModalCategoria" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content fondo2">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModal">Agregar Carrera</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="CarreraID" value="0" />
        <div>
            <label class="control-label">Nombre</label>
            <input type="text" class="form-control" id="Nombre" autocomplete="off" onkeyup="this.value = this.value.toUpperCase()"/>
            
            <label class="control-label">Duracion</label>
            <input type="number" min="1" class="form-control" id="Duracion" autocomplete="off" value="1"/>
            
            <p class="text-danger" id="alerta"></p>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" onclick="GuardarCarrera()" class="btn btn-primary">Guardar Cambios</button>
      </div>
    </div>
  </div>
</div>



<div onclick="esconder()" class="btn btn-esconder">
